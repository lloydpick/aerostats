<div class="group">
  <%= f.label :name, t("activerecord.attributes.asset.name", :default => "Name"), :class => :label %>
  <%= f.text_field :name, :class => 'text_field' %>
  <span class="description">The name of the asset, this might be the machine name, or whatever you know it best by</span>
</div>

<div class="group">
  <%= f.label :host_name, t("activerecord.attributes.asset.host_name", :default => "Host Name"), :class => :label %>
  <%= f.text_field :host_name, :class => 'text_field' %>
  <span class="description">The host name of this asset eg. server.limi.co.uk</span>
</div>

<div class="group">
  <%= f.label :ip_address, t("activerecord.attributes.asset.ip_address", :default => "IP Address"), :class => :label %>
  <%= f.text_field :ip_address, :class => 'text_field' %>
  <span class="description">The IP address of this asset, will only be used if the DNS of the host name fails</span>
</div>

<div class="group">
  <%= f.label :description, t("activerecord.attributes.asset.description", :default => "Description"), :class => :label %>
  <%= f.text_area :description, :class => 'text_area' %>
  <span class="description">A quick description of this asset, you might want to include where it's physically located</span>
</div>

<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>
  <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")} #{t("web-app-theme.cancel", :default => "Cancel")}", admin_assets_path, :class => "button" %>
</div>