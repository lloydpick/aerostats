<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_assets_path %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_asset_path %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= t("web-app-theme.all", :default => "All") %> Assets</h2>

    <div class="inner">
      <table class="table">
        <tr>
          <th class="first">ID</th>
          <th>Name</th>
          <th>Host Name</th>
          <th><%= t("web-app-theme.created_at", :default => "Created at") %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @assets.each do |asset| -%>
            <tr class="<%= cycle("odd", "even") %>">
              <td><%= asset.id %></td>
              <td><%= asset.name %></td>
              <td><%= asset.host_name %></td>
              <td><%= asset.created_at %></td>
              <td class="last">
                <%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_asset_path(asset) %> |
                <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_asset_path(asset) %> |
                <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_asset_path(asset), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
              </td>
            </tr>
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>

      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>